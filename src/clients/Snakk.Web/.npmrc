# NPM Security Configuration

# Audit level - fail on high/critical vulnerabilities
audit-level=high

# Disable funding messages (reduce noise)
fund=false

# Prevent automatic execution of lifecycle scripts from untrusted packages
# Note: This may break some packages that rely on postinstall scripts
# If needed, you can enable scripts with: npm install --ignore-scripts=false
# ignore-scripts=true

# Use package-lock.json for reproducible builds
package-lock=true

# Strict SSL verification
strict-ssl=true
