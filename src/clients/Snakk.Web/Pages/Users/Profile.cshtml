@page "/u/{publicId}"
@using Snakk.Web.Helpers
@model ProfileModel
@{
    ViewData["Title"] = Model.Profile?.DisplayName ?? "User Profile";
}

<div class="max-w-2xl mx-auto">
    @if (Model.Profile != null)
    {
        <div class="clean-card">
            <!-- Profile Header -->
            <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6 p-6">
                <div class="avatar avatar-lg">
                    <img src="@SnakkUrlHelper.UserAvatar(Model.ApiBaseUrl, Model.Profile.PublicId)"
                         alt="@Model.Profile.DisplayName"
                         class="rounded-full w-24 h-24" />
                </div>
                <div class="flex-1 text-center sm:text-left">
                    <h1 class="text-2xl font-bold">@Model.Profile.DisplayName</h1>
                    <div class="text-muted mt-2">
                        <p>Joined @Model.FormatDate(Model.Profile.JoinedAt)</p>
                        @if (Model.Profile.LastSeenAt.HasValue)
                        {
                            <p>Last seen @Model.GetRelativeTime(Model.Profile.LastSeenAt)</p>
                        }
                    </div>
                </div>
            </div>

            <div class="divider my-0"></div>

            <!-- Stats -->
            <div class="grid grid-cols-2 gap-4 p-6">
                <div class="text-center">
                    <div class="text-3xl font-bold text-primary">@Model.Profile.DiscussionCount</div>
                    <div class="text-sm text-muted">Discussions</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-primary">@Model.Profile.PostCount</div>
                    <div class="text-sm text-muted">Posts</div>
                </div>
            </div>

            <div class="divider my-0"></div>

            <!-- Quick Links -->
            <div class="p-6">
                <h3 class="font-semibold mb-4">Activity</h3>
                <div class="flex flex-col sm:flex-row gap-3">
                    <a href="/search?authorPublicId=@Model.Profile.PublicId&tab=discussions"
                       class="btn btn-outline btn-sm flex-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                        View Discussions
                    </a>
                    <a href="/search?authorPublicId=@Model.Profile.PublicId&tab=posts"
                       class="btn btn-outline btn-sm flex-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                        </svg>
                        View Posts
                    </a>
                </div>
            </div>
        </div>
    }
</div>
