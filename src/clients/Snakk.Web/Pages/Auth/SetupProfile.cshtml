@page "/auth/setup-profile"
@model Snakk.Web.Pages.Auth.SetupProfileModel
@{
    ViewData["Title"] = "Setup Your Profile";
}

<div class="container max-w-md mx-auto px-4 py-12">
    <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
            <h1 class="card-title text-3xl mb-2">Welcome to Snakk!</h1>
            <p class="text-base-content/70 mb-6">Let's set up your profile to get started.</p>

            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-error mb-4">
                    <span>@Model.ErrorMessage</span>
                </div>
            }

            <script>
                // Handle OAuth tokens in URL fragment for new users
                (function() {
                    const fragment = window.location.hash.substring(1);
                    if (fragment) {
                        const params = new URLSearchParams(fragment);
                        const accessToken = params.get('access_token');
                        const refreshToken = params.get('refresh_token');

                        if (accessToken && refreshToken) {
                            console.log('[Setup Profile] Storing OAuth tokens from fragment');
                            localStorage.setItem('snakk_jwt_token', decodeURIComponent(accessToken));
                            localStorage.setItem('snakk_refresh_token', decodeURIComponent(refreshToken));

                            // Clear fragment from URL
                            history.replaceState(null, '', window.location.pathname);
                        }
                    }
                })();
            </script>

            <form id="setupProfileForm" class="space-y-4">
                <div id="errorAlert" class="alert alert-error mb-4 hidden">
                    <span id="errorMessage"></span>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Display Name</span>
                    </label>
                    <input type="text"
                           id="displayName"
                           name="displayName"
                           value="@Model.SuggestedDisplayName"
                           class="input input-bordered"
                           required
                           placeholder="Choose your display name" />
                    <label class="label">
                        <span class="label-text-alt">This is how others will see you</span>
                    </label>
                </div>

                <div class="alert alert-info">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <span>You can change this later in your profile settings.</span>
                </div>

                <button type="submit" class="btn btn-primary w-full">Continue</button>
            </form>

            <script>
                const apiBaseUrl = '@Model.ApiBaseUrl';
                document.getElementById('setupProfileForm').addEventListener('submit', async function(e) {
                    e.preventDefault();

                    const displayName = document.getElementById('displayName').value;
                    const errorAlert = document.getElementById('errorAlert');
                    const errorMessage = document.getElementById('errorMessage');

                    try {
                        const response = await fetch(`${apiBaseUrl}/auth/update-profile`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json',
                                ...window.snakkAuth.getAuthHeaders()
                            },
                            body: JSON.stringify({ displayName })
                        });

                        const data = await response.json();

                        if (!response.ok) {
                            errorMessage.textContent = data.error || 'Failed to update profile';
                            errorAlert.classList.remove('hidden');
                            return;
                        }

                        // Update token if API returned a new one
                        if (data.token) {
                            window.snakkAuth.setToken(data.token);
                        }

                        // Redirect to home
                        window.location.href = '/';
                    } catch (error) {
                        errorMessage.textContent = 'Network error. Please try again.';
                        errorAlert.classList.remove('hidden');
                    }
                });
            </script>
        </div>
    </div>
</div>
